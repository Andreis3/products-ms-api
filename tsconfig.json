{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2021",
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "rootDirs": ["src", "tests"],
        "baseUrl": "src",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src", "tests/integration", "tests/unit"]
}
